@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row" id="userRow">
        <div class="col-md-6 users">
            <div class="user">
                <form id="enterUserForm">
                    <div class="form-group">
                        <label for="userInput">User Name</label>
                        <input type="text" class="form-control" id="userInput" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label for="groupInput">Group select</label>
                        <select class="form-control" id="groupInput">
                            <option>Group 1</option>
                            <option>Group 2</option>
                            <option>Group 3</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" id="addGroup" class="btn btn-success">Start Message</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row d-none" id="messageRow">
        <div class="col-md-6">
            <div class="messages pr-3" style="border-right:2px solid green">
                <div class="form-group">
                    <button type="submit" id="leaveGroup" class="btn btn-outline-danger">Leave Group</button>
                </div>
                <form id="messageForm">
                    <div class="form-group">
                        <label for="messageInput">Messages</label>
                        <textarea class="form-control" id="messageInput" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" id="sendButton" class="btn btn-success">Submit</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-6 message-box">
            <ul id="messagesList" class="list-group">
            </ul>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
}